<body>
		<div class="jumbotron">
			<a href="/"><img class="img"></a>
			<h1>MentorApp</h1>
			<p>Find a Mentor &middot; Find a Mentee </p>
		</div>

<div class="container">

<!-- DROPDOWN STARTS -->
<div class="dropdown">
  <h1 class="header">I am looking for a...<button class="btn btn-default dropdown-toggle" id="selectBtn" type="button" data-toggle="dropdown"><font size="3"color="black">Select</font><span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><a href="#" id="mentor" onclick="displayMentors();">Mentor</a></li>
    <li><a href="#" id="mentee" onclick="displayMentees();">Mentee</a></li>
  </ul>
</h1>
</div>
<!-- DROPDOWN ENDS -->

</br>


<center><h4>MATCHES:</h4></center>

{{#if carousel}}
<div class="carousel-inner" role="listbox">

{{#each matchesList}}

	<div class="item">
<div class="card" id="carouselCard">
<div class="avatar" style="float:left">
<a href="project/{{name}}" class="thumbnail" id="clickTest"><img src="{{image}}" alt="" /></a>
</div>

<div class="content">
			<a href="project/{{name}}" class="thumbnail">
							<font color="black"><h3>{{name}}</h3></font>
								<p>Web Developer <br>
									{{major}}</p></a>
						<p><a href="messages/viewmessages/{{name}}" class="btn btn-default center-block">Message</a></p>

<br>

<div class="description" style="float:left">
<a href="project/{{name}}" class="thumbnail">
<font color="black"><p>{{description}}</p></font></a>
						</div>
				</div>
	</div>
</div>
{{/each}}
<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
	<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	<span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	<span class="sr-only">Next</span>
</a>
</div>
</div>
</div>
{{else}}
{{#each matchesList}}

<div class="card" id="{{status}}">


                <div class="avatar">
                    <a href="project/{{name}}" class="thumbnail" id="clickTest" style="float:left"><img src="{{image}}" alt="" /></a>
                </div>

                <div class="content">

                    <a href="project/{{name}}" class="thumbnail" id="clickTest">

                      <font color="black"><h3>{{name}}</h3></font>
                      <p>Web Developer <br>
                       {{major}}</p></a>

                    <p><a href="messages/viewmessages/{{name}}" class="btn btn-default" id="messagebtn">Message</a></p>
                </div>
            </div>
</br>

{{/each}}
{{/if}}






